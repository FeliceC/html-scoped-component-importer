{
  "name": "html-scoped-component-importer",
  "version": "0.0.1",
  "main": "./src/index.ts",
  "license": "MIT",
  "scripts": {
    "build": "webpack --mode production"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "babel-loader": "^8.0.6",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "ts-loader": "^6.1.0",
    "typescript": "^3.6.3",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.8",
    "webpack-dev-server": "^3.8.0"
  },
  "browserslist": [
    "Chrome >= 69",
    "Firefox >= 62",
    "Safari >= 10",
    "Edge >= 15",
    "iOS >= 10",
    "Android >= 5",
    "not ie < 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "es6": true
    },
    "parserOptions": {
      "allowImportExportEverywhere": true,
      "sourceType": "module"
    },
    "plugins": [
      "compat"
    ],
    "rules": {
      "compat/compat": "error",
      "no-param-reassign": "off",
      "no-useless-constructor": "off",
      "no-restricted-syntax": "off",
      "padded-blocks": "off",
      "no-console": "error",
      "no-debugger": "error",
      "no-alert": "error",
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "no-underscore-dangle": "off",
      "class-methods-use-this": "off",
      "max-len": [
        "error",
        {
          "code": 250
        }
      ]
    },
    "settings": {
      "polyfills": [
        "serviceworkers"
      ]
    }
  }
}
